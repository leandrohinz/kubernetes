//jenkinsfile for cd
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Clone repository') {
            steps {
                git credentialsId: 'git', url: 'https://github.com/leandrohinz/kubernetes.git'
            }
       
        }
    
        stage('Terraform Init') {
            steps {
                sh 'cd /helm-aws/users-api && terraform init'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'cd /helm-aws/users-api && terraform apply -auto-approve'
            }
        }
    
    }
}